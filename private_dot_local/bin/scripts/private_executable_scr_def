#!/bin/sh
xrandr --output eDP --mode 1920x1080 --pos 0x0 --rotate normal --output DisplayPort-0 --off --output DisplayPort-1 --off --output DisplayPort-2 --off --output DisplayPort-3 --off --output DisplayPort-4 --off
setbg ~/.local/share/bg
xinput --map-to-output 'Wacom HID 52AE Pen' eDP
xinput --map-to-output 'Wacom HID 52AE Finger' eDP
xinput --map-to-output 'Wacom HID 52AE Pen Pen (0x80218028)' eDP
xinput --map-to-output 'Wacom HID 52AE Pen Eraser (0x80218028)' eDP
setxkbmap -model pc105 -layout dk -variant dvorak -option caps:escape
